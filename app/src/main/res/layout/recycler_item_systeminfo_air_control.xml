<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80pt"
    android:background="@drawable/round_border"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40pt"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivAirControl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginStart="10dp"
            android:src="@drawable/angel"
            android:layout_margin="5dp"
            tools:ignore="DuplicateIds" />
        <TextView
            android:id="@+id/tvAirControl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:textSize="23sp"
            android:textColor="@color/recyclerViewItemFont"/>
        <Switch
            android:id="@+id/swAirControl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginEnd="10dp"
            android:theme="@style/SwitchTheme"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40pt"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivWindowControl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginStart="10dp"
            android:src="@drawable/angel"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tvWindowControl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:textSize="23sp"
            android:textColor="@color/recyclerViewItemFont"/>
        <Switch
            android:id="@+id/swWindowControl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginEnd="10dp"
            android:theme="@style/SwitchTheme"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>

</LinearLayout>