<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationActivity">

    <Button
        android:id="@+id/ReservationAddBtn"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/ReservationCancelBtn"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/TimeSelectBtn"
        android:layout_width="409dp"
        android:layout_height="94dp"
        android:ems="10"
        android:inputType="time"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="61dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="126dp"
        android:layout_height="61dp"
        android:layout_marginTop="104dp"
        android:text="OPEN"
        app:layout_constraintTop_toBottomOf="@+id/ReservationCancelBtn"
        tools:layout_editor_absoluteX="36dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="126dp"
        android:layout_height="61dp"
        android:layout_marginTop="104dp"
        android:text="CLOSE"
        app:layout_constraintTop_toBottomOf="@+id/ReservationAddBtn"
        tools:layout_editor_absoluteX="257dp" />

</androidx.constraintlayout.widget.ConstraintLayout>